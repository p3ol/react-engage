{
  "compilerOptions": {
    "paths": {
      "~/*": ["./*"]
    },
    "baseUrl": ".",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "jsx": "react-jsx",
    "noEmit": true,
    "esModuleInterop": true,
    "types": ["jest", "node", "react", "webpack-dev-server"],
    "module": "esnext",
    "lib": ["esnext", "dom"],
    "moduleResolution": "bundler",
    "target": "ES5",
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*",
    "tsup.config.ts",
    "jest.config.ts",
  ],
  "exclude": [
    "**/dist/*",
    "node_modules/**/*",
  ]
}
